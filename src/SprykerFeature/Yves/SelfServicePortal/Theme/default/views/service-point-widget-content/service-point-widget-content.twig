{% extends template('widget') %}

{% define data = {
    isServicePointRequired: isServicePointRequired | default(null),
    shipmentTypeUuid: shipmentTypeUuid | default(null),
    quantity: quantity | default(0),
    items: items | default([]),
    product: product | default(null),
    servicePoint: servicePoint | default(null),
    serviceType: serviceType | default(null),
    serviceTypeUuid: serviceTypeUuid | default(null),
    serviceTypeKey: serviceTypeKey | default(null),
} %}

{% block body %}
    {% include molecule('ssp-service-point-selector', 'SelfServicePortal') with {
        data: {
            shipmentTypeUuid: data.shipmentTypeUuid,
            quantity: data.quantity,
            items: data.items,
            product: data.product,
            isServicePointRequired: data.isServicePointRequired,
            servicePoint: data.servicePoint,
            serviceTypeKey: data.serviceTypeKey,
            serviceTypeUuid: data.serviceTypeUuid,
        },
    } only %}
{% endblock %}
